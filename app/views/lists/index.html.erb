<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.pixabay.com/photo/2017/07/13/23/11/cinema-2502213_960_720.jpg);">
  <div class="container">
    <h1>Bienvenue dans notre cinéma!</h1>
    <p>Ici découvres les avis de chacun</p>
    <%= link_to "Créer une liste de films", new_list_path, class: "button btn-index"%>
  </div>
</div>


<div class="container">
  <div class="mb-4 d-flex align-items-center justify-content-between">
    <h2>Mes listes</h2>

  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4">
        <%= link_to list_path(list), class: "text-decoration-none" do %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300 %>')">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
